<LabelWrap>:
	size_hint_y: 1
	pos_hint: {'center_y': .5}
	text_size: self.width, None
	height: self.texture_size[1]

<CheckBoxSymptoms@CheckBox>:
	pos_hint: {'center_x': .1, 'center_y': .5}
	color: (1,1,1,1)

<AddProfile>:
	background_color: (1, 0, 0, 1)
	
<SubmitSymptoms>:
	background_color: (1,0,0,1)
	size_hint: (1, .3)

<AlertButton>:
	size_hint: (1, .3)
	pos_hint:{'center_x': .5, 'center_y':.5}
	
<RiskLayout>:
	orientation: 'vertical'
	Label:
		size_hint: 1, .3
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		text: 'My First 28 ARI Symptoms'
		bold: True
		font_size: '20sp'
		canvas.before:
			Color:
				rgb: (0,.5,.5)
			Rectangle:
				pos: self.pos
				size: self.size
	Label:
		text: 'What symptoms are your baby experiencing?'
		font_size: '16sp'
		size_hint: 1, .2

<First28ScreenManager>:
	MainMenu:
		name: 'Menu'
		id: Main_Menu
	NewProfile:
		name: 'NewProfile'
		id: New_Profile
	DehydrationSet:
		name: 'Dehydration_Questions'
		id: Dehydration_Set
	AriSet:
		name: 'Ari_Questions'
		id: Ari_Set
	AlertScreen:
		name: 'Alert_Screen'
		id: Alert_Set
	SummaryScreen:
		name: 'Summary_Screen'
		id: Summary_Set
		
<AlertScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			size_hint: 1, .3
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			text: 'Risk Alert!'
			bold: True
			font_size: '20sp'
			canvas.before:
				Color:
					rgb: (1,0,0)
				Rectangle:
					pos: self.pos
					size: self.size
		Label:
			text: 'Your child is at risk for the following:'
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: 1, .2
			font_size: '15sp'
		BoxLayout:
			orientation: 'horizontal'
			id: button_space
		

<DehydrationSet>:
	RiskLayout:
		GridLayout:
			rows: 7
			cols: 2
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Skin pinch goes back slowly"
				CheckBoxSymptoms:
					id: dehydrationS1
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Baby's lips are dry or parched"
				CheckBoxSymptoms:
					id: dehydrationS2
					on_active: root.increaseScore(self.active)	
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Baby's fontanel appears sunken"
				CheckBoxSymptoms:
					id: dehydrationS3
					on_active: root.increaseScore(self.active)					
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Baby's eyes appears sunken"
				CheckBoxSymptoms:
					id: dehydrationS4
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Behavior changes (Lethargic/Unconsciousness/Irritable/Restlessness)"
				CheckBoxSymptoms:
					id: dehydrationS5
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Decrease or absence of tears"
				CheckBoxSymptoms:
					id: dehydrationS6
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Thirsty while breastfeeding"
				CheckBoxSymptoms:
					id: dehydrationS7
					on_active: root.increaseScore(self.active)
			
		SubmitSymptoms:
			id: dehydration
			text: "Submit Dehydration"

<AriSet>:
	RiskLayout:
		GridLayout:
			rows: 3
			cols: 2
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Breath rate greater than 60 breaths per minute"
				CheckBoxSymptoms:
					id: ariS1
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Fever or body temperature more than 28 deg C"
				CheckBoxSymptoms:
					id: ariS2
					on_active: root.increaseScore(self.active)	
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Chest appears indrawn"
				CheckBoxSymptoms:
					id: ariS3
					on_active: root.increaseScore(self.active)					
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Experiencing convulsions"
				CheckBoxSymptoms:
					id: ariS4
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Abnormally sleepy or difficult to wake up"
				CheckBoxSymptoms:
					id: ariS5
					on_active: root.increaseScore(self.active)
			BoxLayout:
				orientation: 'horizontal'
				LabelWrap:
					text: "Wheezing sound coming out of baby"
				CheckBoxSymptoms:
					id: ariS6
					on_active: root.increaseScore(self.active)
			
		SubmitSymptoms:
			id: ari
			text: "Submit ARI"

<SummaryScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			size_hint: 1, .3
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			text: 'Summary'
			bold: True
			font_size: '20sp'
			canvas.before:
				Color:
					rgb: (.5,.5,0)
				Rectangle:
					pos: self.pos
					size: self.size
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: "Severity: "
				font_size: '15sp'
				bold: True
			BoxLayout:
				orientation: 'vertical'
				id: severity_score
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: "Steps you can take: "
				font_size: '15sp'
				bold: True
			BoxLayout:
				id: resources_set
				orientation: 'vertical'
		Button:
			text: "Back to Main Menu"
			on_press: root.manager.current = "Menu"
			size_hint: 1, .3
				
<AllTabs>:
	feeding_info: add_records_tab.ids.feed.text
	diapers_info: add_records_tab.ids.diapers.text
	size_hint: 1,1
	pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
	tab_width: self.size[0] / len(self.tab_list)
	AddRecordsTab:
		id: add_records_tab
    TabbedPanelItem:
        text: 'Resources'
        BoxLayout:
			orientation: 'vertical'
            Button:
                text: 'Dehydration'
				size_hint: 1, .3
			Button:
				text: 'ARI'
				size_hint: 1, .3
	TabbedPanelItem:
		text: 'Log'
				
<AddRecordsTab>:
	text: 'Add Records'
	BoxLayout:
		orientation: 'vertical'
		padding: 20
		spacing: 20
		BoxLayout:
			Label:
				text: 'Date'
				text_size: self.size
				halign: 'left'
		DateRecord:
			id: date
			hint_text: 'dd/dd/yyyy'
			size_hint: .7, .3
			multiline: False
		Label:
			text: 'Feedings'
			text_size: self.size
			halign: 'left'
		DigitRecord:
			id: feed
			size_hint: .7, .3
			multiline: False
		Label:
			text: 'Diapers'
			text_size: self.size
			halign: 'left'
		DigitRecord:
			id: diapers
			size_hint: .7, .3
			multiline: False
		AddRecord:
			size_hint: 1, .5
			text: 'Add Record'
			background_color: (1, 0, 0, 1)		
<MainMenu>:
	FloatLayout:
		AllTabs:
			id: tabManager
			
<NewProfile>:
	bby_name: bn.text
	bby_weight: bw.text
	bby_height: bh.text
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'My First 28'
			bold: True
			font_size: '40sp'
			canvas.before:
				Color:
					rgb: (.5,.5,0)
				Rectangle:
					pos: self.pos
					size: self.size
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Baby Name'
			TextInput:
				id: bn
				size_hint: 1, .4
				pos_hint: {'center_x': .1, 'center_y': .5}
				multiline: False
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Birth Weight'
			DigitRecord:
				id: bw
				hint_text: 'NN lbs'
				size_hint: 1, .4
				pos_hint: {'center_x': .1, 'center_y': .5}
				multiline: False
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Birth Height'
			DigitRecord:
				id: bh
				hint_text: 'NN cms'
				size_hint: 1, .4
				pos_hint: {'center_x': .1, 'center_y': .5}
				multiline: False
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Full Term'
			ToggleButton:
				text: 'Yes'
				group: 'full_term'
			ToggleButton:
				text: 'No'
				group: 'full_term'
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Normal at time of discharge'
			ToggleButton:			
				text: 'Yes'
				group: 'pathological'
			ToggleButton:
				text: 'No'
				group: 'pathological'
		AddProfile:
			text: 'Save Profile'
			